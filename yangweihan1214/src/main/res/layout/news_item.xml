<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/thumbnail_pic_s"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_launcher_background"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/news_title"
        android:text="美国被特朗普坑惨了！又有3个铁杆盟友公开唱对台戏！"
        android:textColor="#000FFF"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/thumbnail_pic_s"
        app:layout_constraintLeft_toRightOf="@id/thumbnail_pic_s"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/news_date"
        android:text="2018-05-12 07:25"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/thumbnail_pic_s"
        app:layout_constraintLeft_toRightOf="@id/thumbnail_pic_s"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author_name"
        app:layout_constraintBottom_toBottomOf="@id/news_date"
        app:layout_constraintLeft_toRightOf="@id/news_date"
        android:text="胜多负少"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="45dp"
        />
</android.support.constraint.ConstraintLayout>
